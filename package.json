{
  "name": "eddiebot",
  "version": "1.0.0",
  "description": "Discord bot for Eddie Jaoude's Discord server",
  "main": "index.js",
  "scripts": {
    "commit": "cz",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "build": "tsc",
    "setup": "npm install && npm run lint && npm run build",
    "dev": "npm install && ts-node-dev --watch --respawn --transpile-only ./src/index.ts",
    "start": "node dist/index.js",
    "start:local": "npm run build && node dist/index.js",
    "start:watch": "nodemon",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EddieJaoudeCommunity/EddieBot.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EddieJaoudeCommunity/EddieBot/issues"
  },
  "homepage": "https://github.com/EddieJaoudeCommunity/EddieBot#readme",
  "dependencies": {
    "axios": "^0.21.0",
    "discord.js": "^12.4.1",
    "dotenv": "^8.2.0",
    "firebase-admin": "^9.3.0",
    "moment-timezone": "^0.5.31",
    "node-schedule": "^1.3.2",
    "pino": "^6.7.0",
    "pino-pretty": "^4.3.0",
    "soundex-code": "^1.0.5"
  },
  "devDependencies": {
    "@types/node": "^14.14.6",
    "@types/node-schedule": "^1.3.1",
    "@types/pino": "^6.3.3",
    "@types/soundex-code": "^1.0.0",
    "@types/ws": "^7.2.9",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "ts-node-dev": "^1.0.0",
    "typescript": "4.0.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
